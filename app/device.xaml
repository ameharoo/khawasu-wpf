<UserControl x:Class="app.device"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:app"
             mc:Ignorable="d"
             d:DesignHeight="88" d:DesignWidth="1020">
    <DockPanel>
        <StackPanel>
            <Label Name="Title" Foreground="{DynamicResource PrimaryTextColor}" FontSize="24">Device name</Label>
            <StackPanel Orientation="Horizontal">
                <Label Name="Type" Foreground="{DynamicResource SecondaryTextColor}" FontSize="24">Type</Label>
                <Label Name="Delim" Foreground="{DynamicResource DividerColor}" FontSize="24">-</Label>
                <Label Name="Address" Foreground="{DynamicResource SecondaryTextColor}" FontSize="24">0F:0F:0F:0F:0F:0F</Label>
            </StackPanel>
        
        </StackPanel>
        <DockPanel>
            <Button HorizontalAlignment="Right" 
                    Width="106" 
                    Height="50" 
                    Margin="10" 
                    Background="{DynamicResource AccentColor}"
                    Foreground="{DynamicResource TextIconColor}">
                Off
            </Button>
        </DockPanel>
    </DockPanel>
</UserControl>
